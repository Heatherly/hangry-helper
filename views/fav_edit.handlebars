<div class="container">
<h2>Edit Recipe: {{recipe_data.title}}</h2>

<div class="row">
	<div class="col-md-12">

		<div class="row">
		
			<div class="col-md-6">
			    <img class="card-img-top" src="{{recipe_data.image}}" alt="{{recipe_data.title}}">
		    
		      <h4>Directions</h4>
		        <small class="text-muted">Full instructions available at: <a href="{{recipe_data.url}}" target="_blank">{{recipe_data.source}}</a></small>

		        <h4>Notes:</h4>
		        <form action="/{{recipe_data.id}}?_method=PUT" method="POST">
          <input type="text" name="notes">
          <button type="submit" class="btn btn-primary btn-sm">Add Note</button>
        </form>

		    </div>
		    <div class="col-md-6">


		      
		        <h5 class="card-ingredients"><strong>Ingredients</strong></h5>
		        <ul class="ingList">{{recipe_data.ingredients}}</ul>

		        <p><button type="button" class="btn btn-primary">Email Recipe</button></p>

		        
		    </div>
		</div>
		 
	</div>

</div>

</div> <!--container div -->