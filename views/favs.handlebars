<div class="container">
		<h2>My Favorite Recipes</h2>

 		<!-- <div class="row">
 			<div class="col=md-12"> -->
 			 {{#each recipe_data}}
				  <div class="card w-25">
				    <img class="card-img-top" src="{{this.image}}" alt="{{this.title}}">
				    <div class="card-body text-center">
				      <h4 class="card-title">{{this.title}}</h4>
				      <form action="/{{this.id}}?_method=GET" method="GET">
				      <button type="button" class="btn btn-primary">Edit Recipe</button>
				      </form>
				      <small class="text-muted">Full instructions available at: <a href="{{this.url}}" target="_blank">{{this.source}}</a></small>
				    
				  </div>
 			  {{/each}}
 				</div>
 			<!-- </div>
 		</div> -->
 		


</div>