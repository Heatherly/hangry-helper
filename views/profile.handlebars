<h1>Welcome {{user}}</h1>

<div class="row">
	<div class="col-md-12">
		<h2>My Favorite Recipes</h2>

 		<div class="row">
 			<div class="col=md-12">
 			 {{#each recipe_data}}
				  <div class="card w-30">
				    <img class="card-img-top" src="{{this.image}}" alt="{{this.title}}">
				    <div class="card-body">
				      <h4 class="card-title">{{this.title}}</h4>
				      <p class="center"><button type="button" class="btn btn-primary">Edit Recipe</button></p>
		    
				    </div>
				    <div class="card-footer">
				      <small class="text-muted">Full instructions available at: <a href="{{this.url}}" target="_blank">{{this.source}}</a></small>
				    </div>
				  </div>
 			  {{/each}}
 			</div>
 		</div>


</div>